# ======================================
# PostgreSQL MCP Server - Environment Variables Example
# ======================================
# Bu dosyayı kopyalayarak .env dosyanızı oluşturun:
#   Windows: copy .env.example .env
#   Linux/Mac: cp .env.example .env

# LLM Provider Seçimi
LLM_PROVIDER=ollama

# Ollama Ayarları
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2:latest

# Google Gemini API (Opsiyonel)
# GOOGLE_API_KEY=your_gemini_api_key_here

# ======================================
# PostgreSQL Bağlantı URI
# ======================================
# Format: postgresql://username:password@host:port/dbname
DATABASE_URI=postgresql://postgres:your_password@localhost:5432/your_database

# ======================================
# Güvenlik Ayarları
# ======================================
MAX_QUERY_TIMEOUT=30
MAX_RESULT_ROWS=1000

# ======================================
# Yazma İşlemleri Güvenlik Ayarları
# ======================================
WRITE_ENABLED=false
WRITABLE_TABLES=customers,orders,products
MAX_WRITE_ROWS=100

# Loglama
LOG_LEVEL=INFO
